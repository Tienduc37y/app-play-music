<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_marginLeft="0dp"
        android:layout_Right="0dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageviewbackgroundplaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginLeft="0dp"
        android:layout_Right="0dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="110dp"/>
    <ImageView
        android:id="@+id/imageviewplaylist"
        android:layout_alignBottom="@id/imageviewbackgroundplaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textSize="13sp"
        android:text="Nhung bai hit cu"
        android:layout_alignBottom="@id/imageviewplaylist"
        android:layout_toRightOf="@id/imageviewplaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:id="@+id/textviewplaylist"
        android:maxLines="1"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </RelativeLayout>



