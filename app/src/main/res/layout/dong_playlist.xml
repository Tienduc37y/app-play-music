<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imageviewbackgroundplaylist"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="center" />
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        />
    <ImageView
        android:id="@+id/imageviewplaylist"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/imageviewbackgroundplaylist"
        android:elevation="6dp"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textSize="13dp"
        android:text="Những bài hát của"
        android:layout_alignBottom="@id/imageviewplaylist"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/imageviewplaylist"
        android:id="@+id/textviewtenplaylist"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>