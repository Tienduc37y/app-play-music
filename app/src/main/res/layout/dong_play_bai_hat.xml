<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffff"
            android:textSize="17sp"
            android:text="1"
            android:layout_margin="10dp"
            android:id="@+id/textviewplaynhacindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Tên ca khúc: "
            android:id="@+id/textviewplaynhactenbaihat"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/textviewplaynhacindex"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:textSize="12sp"
            android:text="Ca sĩ"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textviewplaynhacindex"
            android:layout_below="@+id/textviewplaynhactenbaihat"
            android:layout_width="wrap_content"
            android:id="@+id/textviewplaynhactencasi"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>